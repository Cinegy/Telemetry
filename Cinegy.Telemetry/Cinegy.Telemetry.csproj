<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net461;netcoreapp2.0</TargetFrameworks>
    <Version>2.0.0-beta</Version>
    <Authors>Lewis Kirkaldie</Authors>
    <Company>Cinegy GmbH</Company>
    <Description>Telemetry library for logging via NLog to Cinegy Telemetry via ElasticSearch , in C# targetting NET Framework 4.6.1 and NET Core 2.0</Description>
    <Copyright>Cinegy GmbH</Copyright>
    <PackageTags>Cinegy Telemetry Logging</PackageTags>
    <PackageLicenseUrl>http://www.apache.org/licenses/LICENSE-2.0</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/Cinegy/Telemetry</PackageProjectUrl>
    <PackageReleaseNotes>Now with multiple builds targetting NET Framework and NET Core 2.0</PackageReleaseNotes>
    <NeutralLanguage />
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="11.0.1" />
    <PackageReference Include="NLog" Version="4.5.0-rc06" />
    <PackageReference Include="NLog.Targets.ElasticSearch" Version="4.0.0-beta26" />
  </ItemGroup>

</Project>
